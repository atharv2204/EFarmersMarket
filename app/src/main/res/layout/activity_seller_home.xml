<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_Home">

    <ScrollView
        android:background="#C3ED92"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="30sp"
                android:onClick="add_product"
                >

                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/add_icon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD PRODUCT"
                    android:textSize="20sp"
                    android:background="#DC9E9E"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="center|bottom"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="30sp"
                android:onClick="View_products"
                >

                <ImageView
                    android:id="@+id/imageButton4"
                    android:layout_width="190dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/view_products" />

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Products"
                    android:textSize="20sp"
                    android:background="#DC9E9E"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center|bottom"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30sp"
                android:onClick="Order"
                >

                <ImageView
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/seller_todo" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="0dp"
                    android:background="#E8B3B3"
                    android:text="      ORDERS       "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30sp"
                android:onClick="confirm_ord"
                >

                <ImageView
                    android:id="@+id/con_ord"
                    android:layout_width="190dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/confirm_orders" />

                <TextView
                    android:id="@+id/con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="0dp"
                    android:background="#E8B3B3"
                    android:text="Confirmed Orders"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30sp"
                android:onClick="history"
                >

                <ImageView
                    android:id="@+id/deliverimg"
                    android:layout_width="190dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/delivered" />

                <TextView
                    android:id="@+id/dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="0dp"
                    android:background="#E8B3B3"
                    android:text="Delivered Orders"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30sp"
                android:onClick="Logout"
                >

                <ImageView
                    android:id="@+id/imageButton2"
                    android:layout_width="190dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/logout" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     LOGOUT     "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#DC9E9E"
                    android:textColor="@color/black"
                    android:layout_gravity="center|bottom"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>